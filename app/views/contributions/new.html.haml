- quantity_options = Settings.contribution.available_quantities.collect { |q| ["#{q} #{Settings.contribution.noun.pluralize.capitalize}", q] }

%section.content-section.text-center
  %h2 Contribute! Plant a tree

  .card.m-5.text-dark.-page
    .card-body
      %h5.card-title Donate with Credit/Debit card
      = form_for resource do |f|
        = select_tag :quantity,
          options_for_select(quantity_options)
        #js-stripe-card
        = f.submit 'Contribute!', class: 'btn btn-success'
