%h2 Sign up
= form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
  = devise_error_messages!
  = f.fields_for :contributor_attributes do |contributor_fields|
    .field
      = contributor_fields.label :first_name
      %br/
      = contributor_fields.text_field :first_name, autofocus: true
    .field
      = contributor_fields.label :last_name
      %br/
      = contributor_fields.text_field :last_name
  .field
    = f.label :email
    %br/
    = f.email_field :email
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
